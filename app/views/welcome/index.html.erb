<div class="text-center">
    <%= image_tag 'family', width:110 %>
    <p style="color:#3488e7">FamilyBook</p>
</div>

<div class="wrapper">
    <div class="container">
        <h1>Welcome to FamilyBook</h1>
        
        <form class="form" action="/sessions/create" method="post">
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
            <input type="text" placeholder="Email" name="user[email]">
            <input type="password" placeholder="Password" name="user[password]">
            <input type="submit" id="login_button" value="Log in">
            <button href="/signup" type="submit" id="join_button">Sign up</button>
            <% if flash[:alert].present? %>
                <h3 style="color:#337ab7"><%= flash[:alert] %></h3>
            <% end %>
        </form>
    </div>
    
    <ul class="bg-bubbles">
        <li>Family</li>
        <li>Mom</li>
        <li>Dad</li>
        <li>Daughter</li>
        <li>Son</li>
        <li>Sister</li>
        <li>Brother</li>
        <li><img src="http://www.webweaver.nu/clipart/img/people/baby/baby-on-board-sign.png"></li>
        <li></li>
        <li></li>
    </ul>
</div>
    <!-- <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script> -->
    <!-- https://codepen.io/Lewitje/pen/BNNJjo -->
    <%= javascript_include_tag "login_index" %>
    <%= stylesheet_link_tag "login_style" %>

